<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="item"
                type="com.anibalbastias.android.shopcart.data.dataStoreFactory.products.model.ProductsData" />

        <variable
                name="clickHandler"
                type="com.anibalbastias.android.shopcart.presentation.util.adapter.base.BaseBindClickHandler" />

    </data>

    <androidx.cardview.widget.CardView
            android:id="@+id/searchRecentItemContainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16sp"
            android:layout_marginTop="16sp"
            android:layout_marginEnd="16sp"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="false">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>